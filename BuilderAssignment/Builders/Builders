using BuilderAssignment.Models;

namespace BuilderAssignment.Builders
{
    /// <summary>
    /// Concrete builder for Shoyu Ramen
    /// </summary>
    public class ShoyuRamenBuilder : IRamenBuilder
    {
        private RamenBowl ramen;
        public ShoyuRamenBuilder()
        {
            this.ramen = new RamenBowl("Shoyu Ramen");
        }
        public void SetBroth(string broth)
        {
            this.ramen.Broth = broth;
        }
        public void SetNoodles(string noodles)
        {
            this.ramen.Noodles = noodles;
        }
        public void AddToppings(string[] toppings)
        {
            this.ramen.Toppings.AddRange(toppings);
        }
        public void AddExtras(string[] extras)
        {
            this.ramen.Extras.AddRange(extras);
        }
        public RamenBowl GetRamen()
        {
            return this.ramen;
        }
    }

